{
	"name": "youtube-clone",
	"version": "1.0.0",
	"author": {
		"name": "Yahya Hafez",
		"email": "yhafez3@gmail.com",
		"url": "https://www.linkedin.com/in/yahya-hafez/"
	},
	"contributors": [
		{
			"name": "Yahya Hafez",
			"email": "yhafez3@gmail.com",
			"url": "https://www.linkedin.com/in/yahya-hafez/"
		}
	],
	"private": true,
	"type": "module",
	"description": "Youtube clone application",
	"bugs": {
		"url": "https://github.com/yhafez/youtube-clone/issues",
		"email": "yhafez3@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/yhafez/youtube-clone.git"
	},
	"engines": {
		"pnpm": ">=7.9.5"
	},
	"main": "src/index.tsx",
	"typings": "src/vite-env.d.ts",
	"scripts": {
		"start": "vite --port $PORT",
		"start:dev": "vite",
		"dev": "docker-compose -f docker-compose.dev.yml up",
		"build": "vite build",
		"preview": "vite preview",
		"test": "NODE_ENV=test jest",
		"lint": "pnpm lint:format && pnpm lint:fix ",
		"lint:fix": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
		"lint:format": "prettier  --config ./.prettierrc --loglevel warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" ",
		"type-check": "tsc",
		"prepare": "husky install",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	},
	"dependencies": {
		"@vitejs/plugin-react": "^2.0.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"vite": "^3.0.9"
	},
	"devDependencies": {
		"@babel/core": "^7.18.13",
		"@babel/preset-env": "^7.18.10",
		"@babel/preset-react": "^7.18.6",
		"@babel/preset-typescript": "^7.18.6",
		"@commitlint/cli": "^17.1.1",
		"@commitlint/config-conventional": "^17.1.0",
		"@mui/icons-material": "^5.10.3",
		"@storybook/addon-actions": "^6.5.10",
		"@storybook/addon-essentials": "^6.5.10",
		"@storybook/addon-interactions": "^6.5.10",
		"@storybook/addon-links": "^6.5.10",
		"@storybook/builder-vite": "^0.2.2",
		"@storybook/cli": "^6.5.10",
		"@storybook/react": "^6.5.10",
		"@storybook/testing-library": "^0.0.13",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.3.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/jest": "^28.1.8",
		"@types/react": "^18.0.17",
		"@types/react-dom": "^18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.35.1",
		"@typescript-eslint/parser": "^5.35.1",
		"babel-loader": "^8.2.5",
		"camelcase": "6",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.1",
		"husky": "^8.0.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.0.1",
		"jest-environment-jsdom": "^29.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.2"
	},
	"lint-staged": {
		"*.{ts,tsx,js}": [
			"eslint --config .eslintrc"
		],
		"*.{ts,tsx,js,json,html,yml,css,less,scss,md}": [
			"prettier --write"
		]
	},
	"jest": {
		"testEnvironment": "jsdom",
		"setupFilesAfterEnv": [
			"<rootDir>/config/jest/jest-setup.ts"
		],
		"moduleNameMapper": {
			"\\.(css|less)$": "identity-obj-proxy",
			"\\.svg": "<rootDir>/config/jest/__mocks__/svg.js"
		}
	}
}
